---
interface Props {
  width: number;
  height: number;
  loading?: string | any;
}
const {width, height, loading = "eager"} = Astro.props;
---

<a href="/" class="logo">
  <img
    src="/assets/images/logo.svg"
    alt="logo"
    width={width}
    height={height}
    loading={loading}
  />
</a>

<style lang="scss">
  @use "./../../styles/mixins/mixins.scss" as *;
  .logo {
    margin: 2rem auto 0;
  }

  @include media(md) {
    .logo {
      margin: 0;
      img {
        width: 132px;
      }
    }
  }
</style>
